<UserControl x:Class="Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OGFrp.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="LoginGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="78*"/>
            <RowDefinition Height="85.6"/>
            <RowDefinition Height="49.6"/>
            <RowDefinition Height="79*"/>
        </Grid.RowDefinitions>
        <Image x:Name="BG" Source="pack://siteoforigin:,,,/Resources/Background.png" StretchDirection="DownOnly" Stretch="UniformToFill" Grid.RowSpan="4" Margin="-5">
            <Image.Effect>
                <BlurEffect Radius="0"/>
            </Image.Effect>
        </Image>
        <Label x:Name="lb_Welcome" Content="Welcome" Margin="0,2,0,1.6" Grid.Row="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="48" Foreground="White"/>
        <Button x:Name="bt_Letsgo" Content="Let's go!" HorizontalAlignment="Center" Height="Auto" Margin="0" Width="114"  Grid.Row="2"/>
    </Grid>
</UserControl>
