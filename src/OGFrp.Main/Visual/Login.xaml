<UserControl x:Class="Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OGFrp.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="LoginGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="85.6"/>
            <RowDefinition Height="38.4"/>
            <RowDefinition Height="93*"/>
        </Grid.RowDefinitions>
        <Image x:Name="BG" Source="Background.png" StretchDirection="DownOnly" Stretch="UniformToFill" Grid.RowSpan="4" Margin="0,0,0,-4.4"/>
        <Label x:Name="lb_Welcome" Content="Welcome" Margin="0,2,0,1.6" Grid.Row="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="36" Foreground="White"/>
        <Label x:Name="lb_Loading" Content="Loading..." Margin="0" Grid.Row="2" Foreground="White" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
