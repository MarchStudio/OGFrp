<UserControl x:Class="MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OGFrp.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Expander x:Name="ed_UserInfo" Header="UserInfo" Height="93" Margin="10" VerticalAlignment="Top" Width="780" FontSize="20" Foreground="White" IsExpanded="True">
            <Grid Background="#BFFFFFFF">
                <Label x:Name="lb_Username" Content="Label" Height="30" Margin="0" VerticalAlignment="Top" FontSize="16"/>
                <Label x:Name="lb_AccessToken" Content="Label" Height="30" Margin="0,30,0,0" VerticalAlignment="Top" FontSize="16"/>
            </Grid>
        </Expander>
    </Grid>
</UserControl>
