<Window x:Name="window" x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OGFrp.Main"
        mc:Ignorable="d"
        Title="OGFrp" Height="450" Width="800">
    <Grid x:Name="grid">
        <local:Login x:Name="Login" Margin="0,0,-0.4,0"/>
        <local:LoginBox x:Name="LoginBox" Margin="0,0,0,0" Opacity="0" IsEnabled="False" Width="{Binding Width, ElementName=grid}" Height="{Binding Height, ElementName=grid}" Visibility="Hidden"/>
    </Grid>
</Window>
